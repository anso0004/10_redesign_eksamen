---
// Definerer en konstant, som gør det muligt at udskifte indholdet for hver gang komponentet bruges
const {tal, tekst}=Astro.props;
---
<div class="flex_col">
    <!-- Slot gør det muligt at sætte et nyt billede ind hver gang komponentet bruges -->
    <slot />
    <div class="tal_tekst_flex margen_h_mobil margen_v_mobil">
        <!-- Henter Astro.props konstanten, så tekstindholdet kan udskiftes hver gang konstanten bruges -->
        <p class="tal">{tal}</p>
        <p>{tekst}</p>
    </div>
</div>

<style>
    .flex_col{
        display: flex;
        flex-direction: column;
        width: 100%;
        height: auto;
    }
    .tal{
        font-family: var(--nunito);
        font-size: 151px;
        color: var(--green_100);
        font-weight: 200;
        margin-top: 60px;
    }
    .tal_tekst_flex{
        display: flex;
        align-items: center;
        margin-top: 39px;
        gap: 13px;
    }
    p{
        align-self: start;
    }
</style>