const {data} = Astro.props;
console.log(data);
---

  <article class="boks">
    <a href={`singleview/${data.slug}`}>
      {data.tilbud && <div class="tilbud_boks"><img src="public/img/produktliste/tilbud_gulboks.svg" alt="Tilbudsboks" />
        <p class="tilbud_procent">50%</p></div>}
      <img src={data.billede} class="center_img" alt="Produktbillede" />
      <div class="tekstfelt">
        <div class="flex_1">
          <p class="produktbeskrivelse">{data.navn}</p>
          <p class="produkt_pris">kr. {data.pris} ,-</p>
          <p class="produkt_pris_foer hide">kr. {data.pris} ,-</p>
        </div>
        <div class="flex_1">
          <p class="produktfarve">{data.farve}</p>
          <p class="produkt_pris_efter hide">kr. {data.pris} ,-</p>
        </div>
      </div>
    </a>
    <div class="flex_2">
      <!-- <a href={`singleview/${data.slug}`}>
        <button class="kob_knap"><p>Læg i kurv</p></button>
      </a> -->
      <button class="kob_knap"><p>Læg i kurv</p></button>
      <button class="hjerte_knap"></button>
    </div>
  </article>

<script>
</script>

<style>
  /* Hvid baggrundsboks */
  .boks {
    background-color: white;
    /* width: 400px; TILBAGE */
    /* height: 400px; TILBAGE */
    width: 95%;
    height: 95%;
    text-align: left;
    cursor: pointer;
    position: relative;
    margin-bottom: 20px;
  }
  /* Flexboks, der gør at indholde står i både venstre og højre side */
  .flex_1 {
    display: flex;
    justify-content: space-between;
  }
  /* Flexboks, der gør at indholdet står i venstre side */
  .flex_2 {
    display: flex;
    justify-content: flex-start;
    gap: 10px;
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 18px;
  }
  /* Tekstfelt*/
  .tekstfelt {
    margin-left: 20px;
    margin-right: 20px;
  }
  /* Nulstiller margin */
  .produktbeskrivelse,
  .produkt_pris,
  .produktfarve,
  p {
    margin: 0;
  }
  /* Fjerner linkstyling på linktekst */
  a {
    text-decoration: none;
    color: inherit;
  }
  /* Centrer produktbilledet i boks */
  .center_img {
    position: relative; /*For at kunne positionere med tilbud_boks og tilbud_procent*/
    display: block;
    max-width: 337px;
    margin-left: auto;
    margin-right: auto;
  }
  /* Skuler produktpris hele tiden */
  /* .produkt_pris {
    display: none;
  } */
  /* Style af førpris*/
  .produkt_pris_foer {
    color: red;
    text-decoration: line-through;
  }
  /* Positionering af gul tilbudsboks */
  .tilbud_boks {
    position: absolute; /*For at kunne positionere med center_img og tilbud_procent*/
    left: 229px;
    top: -8px;
    z-index: 2; For at lægge ovenpå center_img
  }
  /* Style og positionering af tilbudsprocent-tekst */
  .tilbud_procent {
    position: absolute; /*For at kunne positionere med tilbud_boks og center_img*/
    top: 21px;
    left: 15px;
    font-family: var(--mulish);
    font-size: 21px;
    font-weight: 800;
  }

  /* Style af købknap */
  .kob_knap {
    display: none; /*ChatGPT - Knappen er skjult*/
    width: 100%;
    height: 46px;
    border: 1px solid black;
    background-color: white;
    text-align: center;
    text-decoration: none;
    font-size: 15px;
    cursor: pointer;
  }
  /* ChatGPT - Style af hjerteknap */
  .hjerte_knap {
    display: none; /*Knappen er skjult*/
    cursor: pointer;
    width: 46px;
    height: 46px;
    border: 1px solid black;
    background-color: white;
    font-size: 24px;
    cursor: pointer;
  }
  /* ChatGPT - Tilføjer et indhold før knappen ved hjælp af Unicode-tegn for et tomt hjerte */
  .hjerte_knap::before {
    content: "\2661"; /* Unicode for et tomt hjerte */
  }
  /* ChatGPT - Ændrer indholdet til et fyldt hjerte, når klassen "fyldt" er tilføjet */
  .hjerte_knap.fyldt::before {
    content: "\2665"; /* Unicode for et fyldt hjerte */
    color: var(--green_100);
  }
  /* ChatGPT - Skjuler disse elementer ved hover */
  .boks:hover .produktbeskrivelse,
  .boks:hover .produkt_pris,
  .boks:hover .produktfarve,
  .boks:hover .produkt_pris_foer,
  .boks:hover .produkt_pris_efter {
    display: none;
  }
  /* ChatGPT - Viser disse elementer ved hover */
  .boks:hover .kob_knap,
  .boks:hover .hjerte_knap {
    display: block; /* Show the buy button on hover */
  }
</style>

<script>
  // ChatGPT - Tilføjer en eventlistener til knappen, som skifter klassen "fyldt" til og fra, hver gang der klikkes.
  document.addEventListener("DOMContentLoaded", function () {
    const hjerteKnap = document.querySelector(".hjerte_knap");
    hjerteKnap.addEventListener("click", function () {
      hjerteKnap.classList.toggle("fyldt");
    });
  });
</script>
