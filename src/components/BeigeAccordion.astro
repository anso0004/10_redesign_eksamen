---
const { accordion_txt } = Astro.props;
---

<details class="styled_details">
  <summary>{accordion_txt}</summary>
  <slot />
</details>

<style>
  details,
  summary {
    margin-bottom: 0.5rem;
    background-color: var(--baggrund_50);
    margin: auto;
    font-family: var(--mulish);
    font-size: 15px;
    font-weight: 400;
    line-height: 24px;
  }
  details {
    background-color: var(--baggrund_50);
    border: 1.5px solid var(--sort_100);
    width: 292px;
  }
  details summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    list-style: none;
    margin-bottom: 0rem;
    padding: 0.5rem;
  }

  /* Arrow icon */
  details summary::after {
    content: "";
    width: 0;
    height: 0;
    border-top: 0.5rem solid black;
    border-inline: 0.4rem solid transparent;
  }
  details[open] > summary::after {
    transform: rotate(-180deg);
  }
</style>
