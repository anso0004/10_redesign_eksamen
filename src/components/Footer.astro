  </section>
  <div>
    <div class="nederste_linje">
      <p class="cvr_txt">CVR: 12 34 56 78</p>

      <div class="betalingsmetoder">
        <ul>
          <li>
            <img src="/img/visa.svg" alt="" />
            <img src="/img/dk.svg" alt="" />
            <img src="/img/mastercard.svg" alt="" />
            <img src="/img/mobilepay.svg" alt="" />
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  footer {
    background-color: var(--baggrund_70);
    padding-top: 5%;
  }
  .footer_grid {
    margin-bottom: 3rem;
    margin-right: 6%;
    margin-left: 6%;
  }

  .footer_luft {
    margin-top: 5%;
  }
  /* -------------- Link styling ------------ */
  a {
    text-decoration: none;
  }
  /* Fjerner link farven */
  a {
    color: inherit;
  }

  /* -------------- Liste styling ------------ */
  ul {
    list-style: none;
    margin-bottom: 1rem;
  }
  li {
    font-family: var(--nunito);
    line-height: 2rem;
  }
  h4 {
    display: inline;
    font-weight: 800;
    letter-spacing: 1.5px;
    font-family: var(--nunito);
    font-size: 15px;
  }

  /* -------------- Nyhedsbrev sektion -------------- */
  /* ---- Tekst om nyhedsbrevet ---- */
  .faellesskabet {
    padding-right: 5%;
    margin-right: 5%;
    display: inline;
  }
  .form_felt {
    box-sizing: border-box;
    margin-top: 1rem;
    margin-bottom: 2rem;
    display: flex;
    gap: 1%;
  }
  .form_felt input[type="text"] {
    width: 300px;
    line-height: 2rem;
    font-family: var(--mulish);
    background-color: var(--baggrund_70);
    border: 1px solid #000;
    padding-left: 9px;
  }

  /* ----- Tilmeld knap ----- */
  .Tilmeld {
    background-color: var(--green_100);
    color: var(--baggrund_70);
    border-radius: 3px;
    border: none;
    margin-top: 1rem;
    width: 100px;
    line-height: 2rem;
    font-size: 15px;
    font-family: var(--nunito);
  }

  /* -------------- Nederste sektion af footer -------------- */
  .nederste_linje {
    background-color: var(--green_100);
    display: flex;
    justify-content: space-between;
    padding-bottom: 0.75rem;
    padding-right: 30px;
    padding-left: 30px;
    padding-top: 1.5rem;
  }

  .cvr_txt {
    color: var(--baggrund_70);
  }

  ul .linje2 {
    margin-bottom: 0;
  }

  /* --------------------------- FOOTER DESKTOP ------------------------ */
  @media (min-width: 800px) {
    .footer_grid {
      padding-bottom: 2rem;
      margin-top: 1.5rem;
      display: flex;
      justify-content: space-around;
      margin-right: 0;
    }

    /* Flex: 1, gør at hvert valgt <div> element vil tage lige meget plads inden for deres flex container (.footer_grid), 
      hvilket betyder, at de vil blive jævnt fordelt. */
    .footer_grid div {
      flex: 1;
    }

    /* Styling af hover over links */
    li a:hover {
      text-decoration: underline;
    }

    /* Beskrivelsen til nyhedsbrevet */
    .faellesskabet p {
      line-height: 1.5rem;
      margin-top: 0.8rem;
      width: 45cqh;
    }
    .form_felt {
      margin-top: 5%;
    }

    /* Bredden på form feltet på desktop */
    .form_felt input[type="text"] {
      width: 250px;
    }
    /* Tilmeld knap */
    .Tilmeld {
      border-radius: 1px;
      margin-top: 1.5rem;
    }
  }
</style>
