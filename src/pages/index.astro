---
import Mainlayout from "../layout/Mainlayout.astro";
import Knap from "../components/Knap.astro";
---

<Mainlayout>
  <div class="øverste_billeder">
    <img src="public/img/forside_store_billede.png" alt="" />
  </div>
  <!-- Indsæt karrusel her -->
  <div class="inspiration_sektion">
    <div class="inspiration">
      <img class="item_1" src="public/img/skaale.png" alt="" />
      <div class="lille_billede item_2">
        <img src="public/img/rillevase.png" alt="" />
        <h3>RILLEKOLLEKTION</h3>
        <p>Rillekollektionen består af krukker, skåle og vaser, der vil pryde et hvert hjem.</p>
        <Knap tekst="Læs mere" variant="primary" />
      </div>
    </div>
    <div class="inspiration">
      <div class="lille_billede item_3">
        <img src="public/img/blomsterfad.png" alt="" />
        <h3>BLOMSTERKOLLEKTION</h3>
        <p>Blomsterkollektionen består af fade og tallerkner, der skaber den perfekte sommerstemning.</p>
        <Knap tekst="Læs mere" variant="primary" />
      </div>
      <img class="item_4" src="public/img/blomster_skaal.png" alt="" />
    </div>
  </div>
</Mainlayout>

<style>
  @media (max-width: 800px) {
    .lille_billede {
      margin-left: auto;
      margin-right: auto;
      margin-top: 10%;
      display: flex;
      align-items: center;
      flex-direction: column;
    }
    h3 {
      margin-bottom: 7px;
    }
    p {
      width: 70%;
      margin: auto;
      text-align: center;
      margin-bottom: 15px;
    }
  }
  @media (min-width: 800px) {
    .inspiration_sektion {
      padding-bottom: 10rem;
    }
    .inspiration {
      display: grid;
      grid-template-columns: 1fr 1fr;
      text-align: center;
      margin-top: 10%;
    }
    .lille_billede {
      margin-top: 10%;
    }
    h3 {
      margin: auto;
      margin-top: 46px;
      letter-spacing: 2.8px;
      font-weight: 400;
    }
    p {
      width: 60%;
      justify-content: center;
      margin: auto;
      margin-top: 14px;
      margin-bottom: 17px;
    }
  }
</style>
